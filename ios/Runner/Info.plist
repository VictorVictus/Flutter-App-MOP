	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- ADD THESE NEW PERMISSIONS -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>
	
	<key>NSLocalNetworkUsageDescription</key>
	<string>This app needs network access for normal operation</string>
	
	<key>NSDocumentsFolderUsageDescription</key>
	<string>This app needs access to storage for saving app data and preferences</string>
	
	<!-- If using shared_preferences (you are) -->
	<key>NSUserTrackingUsageDescription</key>
	<string>This app uses local storage to save your preferences</string>
	
